program main;

    print( "kgv(2,3) = ", kgv(2,3) );
    print( "kgv(12,15) = ", kgv(12,15) );

    -- Der Aufruf kgv(x, y) berechnet das kleinste gemeinsame Vielfache der
    -- beiden ganzen Zahlen x und y.
    procedure kgv(x, y);
        return min/ { z in {1.. x * y} | z mod x = 0 and z mod y = 0 };
    end kgv;

end main;
