program main;

    print("Lösung von x = (x+1)**(1.0/3.0): ", solve_a());

    print("Lösung von x ** 3 - 2 = x:       ", solve_b());
    
    -- solve_a berechnet die Lösung der Gleichung x = (x + 1) ** (1.0/3.0).
    procedure solve_a();
        x := 1.0;
        loop
            old_x := x;
            x := (x + 1) ** (1.0/3.0);
            if abs(x - old_x) < 1.0e-13 then
                return x;
            end if;
        end loop;
    end solve_a;

    -- solve_a berechnet die Lösung der Gleichung x = (x + 1) ** (1.0/3.0).
    procedure solve_b();
        x := 1.0;
        loop
            old_x := x;
            x := (x + 2) ** (1.0/3.0);
            if abs(x - old_x) < 1.0e-13 then
                return x;
            end if;
        end loop;
    end solve_b;

end main;
