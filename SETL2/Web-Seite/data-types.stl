program main;

    -- Ganze Zahlen
    a := 17;
    b := 3;
    -- Bei der Divison bleibt das Ergebnis ganzzahlig:
    print( a, " / ", b, " = ", a / b);
    -- Fließkomma-Zahlen (reelle Zahlen) erkennen Sie an dem Dezimalpunkt:
    x := 17.0;
    y := 3.0;
    -- Bei der Divison entsteht ein gebrochenes Ergebnis:
    print( x, " / ", y, " = ", x / y);
    -- Ist einer der Operanden bei einer arithmetischen Operation eine
    -- Fließkomma-Zahl, so wird die Rechnung mit Fließkomma-Arithmetik
    -- durchgeführt:
    print( a, " / ", y, " = ", a / y);
    -- Ganze Zahlen können beliebig viele Stellen haben:
    for n in [1 .. 100] loop
        print( n, " ** ", n, " = ", n ** n );
    end loop;

    -- Strings sind Folgen von Buchstaben, die in doppelten Anführungszeichen
    -- eingeschlossen sind.
    a := "abcdefg";
    b := "uvwxyz";
    -- Strings können mit dem +-Operator aneinander gehängt werden:
    c := a + b;
    print( a, " + ", b, " = ", c );
    -- Strings können mit dem *-Operator vervielfacht werden:
    n := 10;
    c := a * 10;
    print( a, " * ", n, " = ", a * n );

    for a in [ false, true ] loop
        for b in [ false, true ] loop
            print( a, " and ", b, " = ", a and b );
        end loop;
    end loop;

    for a in [ false, true ] loop
        for b in [ false, true ] loop
            print( a, " or ", b, " = ", a or b );
        end loop;
    end loop;

    for a in [ false, true ] loop
        print( "not ", a, " = ", not a );
    end loop;

end main;