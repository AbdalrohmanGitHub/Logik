program main;

    n := 5;

    print("Wert der Variablen n im Haupt-Programm vor dem Aufruf von change(): ", n);
    no_change(n);
    print("Wert der Variablen n im Haupt-Programm nach dem Aufruf von no_change(): ", n);
    change(n);
    print("Wert der Variablen n im Haupt-Programm nach dem Aufruf von change(): ", n);

    procedure no_change(n);
        n := 7;
    end no_change;
    
    procedure change(rw n);
        n := 42;
    end change;

end main;